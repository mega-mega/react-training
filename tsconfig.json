{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // 暗黙のany型をエラーに
    "noImplicitAny": false,
    // 厳密な型チェックオプションを有効に
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    
  }
}
